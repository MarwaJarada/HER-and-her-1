<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/vertical_margin"
    android:layout_marginStart="@dimen/vertical_margin"
    android:layout_marginTop="@dimen/horizontal_margin_short"
    android:layout_marginBottom="@dimen/horizontal_margin_short"
    app:cardCornerRadius="40dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/group_user_image"
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:layout_marginBottom="@dimen/horizontal_margin_short"
                android:layout_marginStart="@dimen/vertical_margin"
                android:layout_marginTop="@dimen/horizontal_margin_short"
                android:src="@drawable/ic_launcher_background" />

            <TextView
                android:id="@+id/group_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/vertical_margin"
                android:text="Jane H."
                android:textSize="20sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/group_post_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/horizontal_margin_short"
            android:layout_marginEnd="@dimen/vertical_margin"
            android:layout_marginStart="@dimen/vertical_margin"
            android:text="@string/text1"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/group_post_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxHeight="200dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/horizontal_margin_short"
            android:layout_marginEnd="@dimen/vertical_margin"
            android:layout_marginStart="@dimen/vertical_margin"
            android:layout_marginTop="@dimen/horizontal_margin_short"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/group_like_button"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:src="@drawable/ic_favorite_black_24dp" />

            <ImageView
                android:id="@+id/group_comment_button"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:src="@drawable/ic_comment_black_24dp" />

        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>